<article>
    <header class="order-summary">
        <h2><span class="order-item-price">₦<%=o.total%></span> - <%=o.arrivingdate%></h2>
        <span class="badge"><%=o.status%></span>
    </header>

<section class="order-details">
    <% if (locals.isAdmin) { %>
        <address>
            <p><a href="mailto:<%=o.user.email %>"><%= o.user.fullname%></a></p>
            <p><%=o.user.address.country%> (<%=o.user.address.state %>)</p>
        </address>
    <% } %>
    
    <ul class="ul">
        <% for (const item of o.productdata)  { %>
            <li>
                <%=item.title%> -
                ₦<%=item.total_amount%>
                (₦<%=item.price%> * <%=item.amount%> )
                
            </li>
        <% } %>
        
    </ul>
</section>
<% if(locals.isAdmin){ %>
    <section class="order-actions">
            <form id="form"  action="/admin/orders/<%= o._id %>" method="POST">
              <input type="hidden" name="_csrf" value="<%=locals.csrfToken%>">  
              <input type="hidden" name="order_id" value="<%= o._id %>">
              <p>
                    Add days to product arrival date:
                    <input type="number" name= "delay_date" required placeholder="only numbers">
                </p>
              <button class="btn">Update</button>
            </form>  
          
    </section>
<% } %>
</article>