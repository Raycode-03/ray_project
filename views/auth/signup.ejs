<%-include ('../includes/head',{pagetitle:'Signup'} )%>
<link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%-include('../includes/header')%>
    <main>
        <h1>Create an Account</h1>
          <% if (inputdata.hasError){ %>
            <div id="error">
                <p id="input-error"><%=inputdata.Message%></p>
            </div>
       <% } %>
        <form action="/signup" method="post" id="form">
            <input type="hidden" name="_csrf" value="<%=locals.csrfToken%>">
            <p>
                <input type="email" name="email" id="email_sign"  placeholder="EMAIL" value="<%=inputdata.hasemail%>">
            </p>
            <p>
                <input type="password" name="password" id="" minlength="6" required placeholder="PASSWORD">
            </p>
            <p>
                
                <input type="password" name="conpassword"  minlength="6" required placeholder="Confirm Password">
            </p>
            <p>
                
                <input type="text" name="fullname" required placeholder="Full Name" value="<%=inputdata.hasfullname%>">
            </p>
            <p>
                
                <input type="text" name="country" placeholder="Country"value="<%=inputdata.hascountry%>">
            </p>
            <p>
                
                <input type="text" name="state" required placeholder="State"value="<%=inputdata.hasstate%>">
            </p>
            

            
            <button>Create account</button>
            <p>Already have an account?<a href="/login">Login instead</a></p>

        </form>
    </main>
<%-include ('../includes/footer') %>